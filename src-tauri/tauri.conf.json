{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Phosphor",
  "version": "1.1.0",
  "identifier": "com.phosphor.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Phosphor",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' asset: https://asset.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "externalBin": ["binaries/proxmark3"],
    "resources": {
      "pm3-libs/*": "./",
      "pm3-libs/platforms/*": "./platforms/",
      "firmware/rdv4/*": "./firmware/rdv4/",
      "firmware/rdv4-bt/*": "./firmware/rdv4-bt/",
      "firmware/generic/*": "./firmware/generic/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright 2025-2026 nik shuv",
    "shortDescription": "Proxmark3 GUI for one-click card cloning",
    "windows": {
      "nsis": {
        "installMode": "both",
        "displayLanguageSelector": true,
        "languages": ["English", "Russian"]
      }
    }
  }
}
