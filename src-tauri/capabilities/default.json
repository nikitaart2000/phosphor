{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "phosphor-default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "binaries/proxmark3", "sidecar": true, "args": true },
        { "name": "proxmark3", "cmd": "proxmark3", "args": true },
        { "name": "proxmark3-win-c", "cmd": "C:\\proxmark3\\proxmark3.exe", "args": true },
        { "name": "proxmark3-win-progfiles", "cmd": "C:\\Program Files\\proxmark3\\proxmark3.exe", "args": true },
        { "name": "proxmark3-mac-local", "cmd": "/usr/local/bin/proxmark3", "args": true },
        { "name": "proxmark3-mac-brew", "cmd": "/opt/homebrew/bin/proxmark3", "args": true },
        { "name": "proxmark3-linux-local", "cmd": "/usr/local/bin/proxmark3", "args": true },
        { "name": "proxmark3-linux-usr", "cmd": "/usr/bin/proxmark3", "args": true }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "binaries/proxmark3", "sidecar": true, "args": true }
      ]
    },
    "shell:allow-kill"
  ]
}
